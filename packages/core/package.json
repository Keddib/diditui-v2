{
  "name": "@diditui/core",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/core.umd.js",
  "module": "./dist/core.es.js",
  "types": "./dist/index.d.ts",
  "style": "./dist/core.css",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/core.es.js",
      "require": "./dist/core.umd.js"
    },
    "./theme.css": "./dist/theme.css"
  },
  "scripts": {
    "dev": "tsc -b && vite build --watch",
    "build": "tsc -b && vite build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@diditui/icons-react": "workspace:*",
    "clsx": "^2.1.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^1.0.0"
  },
  "devDependencies": {
    "@diditui/eslint-config": "workspace:*",
    "@diditui/typescript-config": "workspace:*",
    "@tailwindcss/vite": "^4.1.10",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "eslint": "^9.29.0",
    "typescript": "~5.8.3",
    "tailwindcss": "^4.1.10",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-static-copy": "^3.0.2"
  }
}
